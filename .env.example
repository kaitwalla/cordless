# Required
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=

# Web Push Notifications (required for push notifications)
# Generate with: bundle exec rake vapid:generate
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379/0
# Required for production - generate with: openssl rand -hex 32
REDIS_PASSWORD=

# Storage Configuration
# Options: "local" (default) or "amazon" for S3
STORAGE_SERVICE=local

# Persistent Storage Paths (Docker volumes)
# These default to ./data subdirectories if not specified
# STORAGE_PATH=./data/storage
# REDIS_DATA_PATH=./data/redis
# Production only:
# CADDY_DATA_PATH=./data/caddy/data
# CADDY_CONFIG_PATH=./data/caddy/config

# AWS S3 Configuration (required when STORAGE_SERVICE=amazon)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
# Optional: Custom endpoint for S3-compatible services (MinIO, DigitalOcean Spaces)
# AWS_S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# LiveKit Configuration (for audio/video calls)
# Generate unique keys for production with: openssl rand -hex 16 (key) and openssl rand -hex 32 (secret)
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
# URL must be accessible from the browser (use wss:// for production with SSL)
LIVEKIT_URL=ws://localhost:7880

# Optional
SENTRY_DSN=

# SSL Configuration (production)
SSL_DOMAIN=example.com
# Set to true to disable SSL (development only)
DISABLE_SSL=false
