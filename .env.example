# Required
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=

# Web Push Notifications (required for push notifications)
# Generate with: bundle exec rake vapid:generate
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379/0
# Required for production - generate with: openssl rand -hex 32
REDIS_PASSWORD=

# Optional
SENTRY_DSN=

# SSL Configuration (production)
SSL_DOMAIN=example.com
# Set to true to disable SSL (development only)
DISABLE_SSL=false
